		function getCookieValue(name, fallback) {
		for (let cookies = document.cookie.split(';'), i = 0; i < cookies.length; i++) {
			const e = cookies[i].replace(/^\s+/, '').split('=');
			if (e[0] === name) return fallback ? e[1] : decodeURIComponent(e[1]);
		}
		return '';
	}

	function getUserLocale() {
		var userLoc = false;

		// Attempt to check for fastly cookie "location_data" and retrieve country code.
		try {
			cookie = JSON.parse(getCookieValue('location_data'), siteLocale);

			if (cookie !== null && cookie.hasOwnProperty('country_code')) {
				userLoc = cookie.country_code.toLowerCase();
			}

			return userLoc;
		} catch(e) {
			return false;
		}
	}

